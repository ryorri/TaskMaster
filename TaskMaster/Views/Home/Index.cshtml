@using Microsoft.AspNetCore.Identity;

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>

    .add
    {
        height:70vh;
    }
    .cstmbtn
    {
        width 50%;
    }
</style>


@{
    ViewData["Title"] = "Home Page";
}

@if (!SignInManager.IsSignedIn(User))
{

    <div class="text-center">
       <div class="w-100 btn btn-lg btn-primary" style="width:80%; margin:5%;">
                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
       </div> 
            
       <br />

       <div class="w-100 btn btn-lg btn-primary" style="width:80%; margin:5%;">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
       </div>
       
             

                
    </div>
}
else
{
    <div class="container text-center">
        <div class="row">
            <div class="col border">Errors</div>
            <div class="col border">Warrnings</div>

            <div class="w-100"></div>

                    <div class="col border"><div class="add">@await Html.PartialAsync("../DatabaseViews/_ErrorPartial.cshtml")</div></div>
                <div class="col border"><div class="add">@await Html.PartialAsync("../DatabaseViews/_WarningPartial.cshtml")</div></div>

            <div class="w-100"></div>

            <div class="col" style="margin-top:1%;">
                <a class="btn btn-primary nav-link text-light" asp-controller="CRUD" asp-action="CreateError">Add error</a>
            </div>
            <div class="col" style="margin-top:1%;">
                <a class="btn btn-primary nav-link text-light" @*asp-area="Identity" asp-page="/Account/Login"*@>Add warning</a>
            </div>
        </div>
    </div>
}