@using (Html.BeginForm("prioModelView", "CRUD", FormMethod.Get)) ;

@{
    ViewData["Title"] = "Edit Error";
}

<h1>Edit Error</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditError">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
